            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.tyk.testyourknowledge.stats" />
        </activity>
        <activity
            android:name=".barChartWebServices"
            android:label="@string/title_activity_bar_chart"
            android:parentActivityName=".stats"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.tyk.testyourknowledge.stats" />
        </activity>
    </application>

